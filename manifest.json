{
  "name": "WSP Pump notifications",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Notifcations when the pump does stuff",
  "homepage_url": "http://wottonpool.co.uk",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
        "src/pusher.js",
        "src/bg/background.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' https://stats.pusher.com; object-src 'self'",
  "permissions": [
    "notifications",
    "http://wottonpool.co.uk/"
  ]
}
